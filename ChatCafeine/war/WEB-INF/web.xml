<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	<servlet>
		<servlet-name>connexionUser</servlet-name>
		<servlet-class>sources.server.ConnexionServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>connexionUser</servlet-name>
		<url-pattern>/chatcafeine/ConnexionService</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>compteUser</servlet-name> <!-- Mettre nom au hasard -->
		<servlet-class>sources.server.CompteServiceImpl</servlet-class><!-- Mettre chemin du servlet -->
	</servlet>
	<servlet-mapping>
		<servlet-name>compteUser</servlet-name> <!--Remettre le meme nom au hasard -->
		<url-pattern>/chatcafeine/CompteService</url-pattern> <!-- Mettre /chatcafeine/cheminRelatif -->
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>ChatCafeine.html</welcome-file>
	</welcome-file-list>
</web-app>